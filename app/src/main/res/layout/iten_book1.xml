<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30px">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/bookPicture"
        android:contentDescription="Advanced Search"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Book Title"
        android:textStyle="bold"
        android:textColor="@color/material_deep_teal_500"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/bookGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Genre"
        android:textStyle="italic"
        android:textColor="@color/background_floating_material_dark"
        android:layout_below="@+id/bookAuthor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authors"
        android:textColor="@color/background_floating_material_dark"
        android:layout_below="@+id/bookTitle"
        android:layout_alignLeft="@+id/bookTitle"
        android:layout_alignStart="@+id/bookTitle" />

    <TextView
        android:id="@+id/bookPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/background_floating_material_dark"
        android:layout_below="@+id/bookGenre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />" />
    <TextView
        android:id="@+id/bookAverageRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Rating"
        android:textColor="@color/material_deep_teal_500"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bookGenre"
        android:layout_alignStart="@+id/bookGenre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/bookDescription"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignBottom="@+id/bookTitle"
        android:layout_toRightOf="@+id/bookPicture"
        android:layout_toEndOf="@+id/bookPicture" />

</RelativeLayout>
</ScrollView>