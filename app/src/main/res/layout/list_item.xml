<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_vertical_margin">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/homePicture"
        android:contentDescription="Advanced Search"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Book Title"
        android:textStyle="bold"
        android:textColor="@color/material_deep_teal_500"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/homeGenre"
        android:layout_alignStart="@+id/homeGenre" />
    <TextView
        android:id="@+id/homeGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Genre"
        android:textStyle="italic"
        android:textColor="@color/background_floating_material_dark"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="31dp" />

    <TextView
        android:id="@+id/homeAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authors"
        android:textColor="@color/background_floating_material_dark"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeGenre"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeDescription"
        android:text="Description"
        android:textColor="@color/background_floating_material_dark"
        android:layout_alignBottom="@+id/homePicture"
        android:layout_alignRight="@+id/homeGenre"
        android:layout_alignEnd="@+id/homeGenre" />

    <TextView
        android:id="@+id/homePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/background_floating_material_dark"
        android:layout_alignLeft="@+id/homeDescription"
        android:layout_alignStart="@+id/homeDescription"
        android:layout_below="@+id/homeAuthor"
        android:layout_alignRight="@+id/homeAuthor"
        android:layout_alignEnd="@+id/homeAuthor" />


</RelativeLayout>